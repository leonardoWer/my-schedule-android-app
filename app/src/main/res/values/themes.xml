<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Myschedule" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorAccent">@color/blue</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_regular</item>

    </style>

    <style name="tittle_bold_text">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="tittle_medium_text">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tittle_regular_text">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="gray_regular_text">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="rounded_input">
        <item name="android:padding">16dp</item>
    </style>

    <style name="blue_button">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="spinner">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawable">@color/gray</item>
    </style>

</resources>