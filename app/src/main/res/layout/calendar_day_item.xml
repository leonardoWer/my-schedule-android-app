<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/calendar_day_day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="День недели"
        style="@style/tittle_bold_text"
        android:textColor="@color/blue"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/calendar_day_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tittle_regular_text"
            android:text="Число"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>

        <RelativeLayout
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/gray"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/calendar_day_lessons_cnt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tittle_regular_text"
            android:text="количество пар"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calendar_day_lessons_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/white">
    </LinearLayout>

</LinearLayout>