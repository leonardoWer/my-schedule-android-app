<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/lesson_item_assessment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Лекция"
        android:textSize="10sp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/blue"
        android:paddingVertical="2dp"
        android:paddingHorizontal="12dp"
        android:textColor="@color/white"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:id="@+id/lesson_item_time_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/lesson_item_assessment_type">

        <TextView
            android:id="@+id/lesson_item_lesson_start_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:10"
            android:maxLength="5"
            style="@style/tittle_medium_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lesson_item_lesson_end_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:40"
            android:maxLength="5"
            style="@style/gray_regular_text"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lesson_item_name_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/lesson_item_assessment_type"
        android:layout_toEndOf="@+id/lesson_item_time_body"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/lesson_item_lesson_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tittle_medium_text"
            android:text="Название занятия"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lesson_item_teacher_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/gray_regular_text"
            android:text="Преподаватель"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            app:drawableStartCompat="@drawable/schedule"
            android:drawablePadding="4dp"
            app:drawableTint="@color/gray" />

        <TextView
            android:id="@+id/lesson_item_place_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/gray_regular_text"
            android:text="Место проведения"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            app:drawableStartCompat="@drawable/schedule"
            android:drawablePadding="4dp"
            app:drawableTint="@color/gray"/>

    </LinearLayout>

</RelativeLayout>