<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_add_person_and_places_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tittle_medium_text"
            android:text="Добавить"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@+id/dialog_add_person_and_places_close_image_button"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:id="@+id/dialog_add_person_and_places_close_image_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/close"
            android:layout_margin="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/dialog_add_person_and_places_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginTop="8dp"
        android:hint="Ввод"
        style="@style/rounded_input"
        android:background="@drawable/rounded_input"
        android:layout_gravity="center"
        android:autofillHints=""
        android:inputType="textMultiLine"
        android:maxLines="5"/>

    <Button
        android:id="@+id/dialog_add_person_and_places_save_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_vertical|end"
        style="@style/blue_button"
        android:text="@string/save"/>

</LinearLayout>